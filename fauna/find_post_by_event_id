Query(
  Lambda(
    ["id"], 
    Select(
      ["data"],
      Map(
        Filter(
          Paginate(Match(Index("allPosts"))),
          Lambda(
            "post",
            Equals(Var("id"), Select(["data", "event", "id"], Get(Var("post"))))
          )
        ),
        Lambda(
          "post",
          Get(Var("post"))  
        )
      )
    )
  )
)

