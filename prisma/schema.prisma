
datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")

}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  location      String
  github        String
  stackoverflow String
  linkedin      String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Company {
  id        String   @id @default(cuid())
  logoFile  String
  name      String
  position  String
  period    String
  active    Boolean
  startDate DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PlaygroundEquipment {
  id             String   @id @default(cuid())
  name           String
  repositoryLink String
  demoLink       String
  icon           String
  tags           String[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Tool {
  id   Int    @id @default(autoincrement())
  name String @unique
}